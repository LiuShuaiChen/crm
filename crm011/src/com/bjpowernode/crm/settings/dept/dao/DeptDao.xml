<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.bjpowernode.crm.settings.dept.dao.DeptDao">
	<resultMap type="dept" id="rDept">
		<id property="id" column="id" />
		<result property="no" column="no"/>
		<result property="name" column="name"/>
		<result property="manager" column="manager"/>
		<result property="phone" column="phone"/>
		<result property="description" column="description"/>

	</resultMap>
	
	<delete id="delete" parameterType="string">
		delete from tbl_dept where id = #{id}
	</delete>
	
	<select id="getAll" parameterType="map" resultMap="rDept">
		select id,no,name,manager,phone,description from tbl_dept
		limit #{skipCount}, #{pageCount}
	</select>
	
	<select id="getById" parameterType="string" resultType="dept">
		select id,no,name,manager,phone,description from tbl_dept
		where id = #{id}
	</select>
	
	<select id="getByName" parameterType="string" resultType="dept">
		select id,no,name,manager,phone,description from tbl_dept where name = #{name};
	</select>
	
	<select id="getTotal" parameterType="int" resultType="int">
		select count(*) from tbl_dept
	</select>
	
	<insert id="insert" parameterType="dept">
		insert into tbl_dept(id,no,name,manager,phone,description)
		values(#{id}, #{no}, #{name}, #{manager}, #{phone}, #{description})
	</insert>
	
	<update id="update" parameterType="dept">
		update tbl_dept set no=#{no}, name=#{name}, manager=#{manager}, phone=#{phone}, description=#{description}
		where id = #{id}
	</update>
	
	<!-- List<Dept> getByAll(); -->
	<select id="getByAll" resultMap="rDept">
		select id,no,name,manager,phone,description from tbl_dept
	</select>

	


</mapper>